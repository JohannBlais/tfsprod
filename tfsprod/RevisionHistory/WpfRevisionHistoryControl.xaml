<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ShowRevHist="clr-namespace:TFSExt.ShowRevHist" x:Class="tfsprod.WpfRevisionHistoryControl" 
             xmlns:MSVS="clr-namespace:Microsoft.TeamFoundation.VersionControl.Client;assembly=Microsoft.TeamFoundation.VersionControl.Client"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TreeView x:Name="btreeview" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" 
                  ItemsSource="{Binding ShowRevHist:BTreeItem}">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type ShowRevHist:BTreeItem}" ItemsSource="{Binding Items}">
                    <TextBlock Text="{Binding Path=Path}" />
                </HierarchicalDataTemplate>
                <DataTemplate DataType="{x:Type MSVS:Changeset}" >
                    <TextBlock Text="{Binding Path=ChangesetId}" />
                </DataTemplate>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</UserControl>
