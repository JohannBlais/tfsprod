<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ShowRevHist="clr-namespace:TFSExt.ShowRevHist"              
             xmlns:tfsprod="clr-namespace:tfsprod"         
             x:Class="tfsprod.WpfRevisionHistoryControl"          
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border x:Name="border" BorderBrush="Black" CornerRadius="1" BorderThickness="0.1" ClipToBounds="True">
        <Canvas x:Name="canvas" Background="White" Margin="0" ClipToBounds="True" />
    </Border>
</UserControl>
